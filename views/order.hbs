<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Orden de Carga</title>
  <style>
    @page {
      size: A4 portrait;
    }

    body {
      padding: 20px;
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      font-size: 13px;
    }

    .container {
      width: 100%;
    }

    .half-page {
      height: 49%;
      border-bottom: 1px dashed #000;
      margin-bottom: 10px;
      margin-top: 10px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }

    th,
    td {
      font-weight: lighter;
      text-align: left;
      padding: 4px;
    }

    th {
      background-color: #f2f2f2;
    }

    table,
    th,
    td {
      border: none;
    }

    .info {
      display: flex;
      justify-content: space-between;
      margin-top: 10px;
    }

    .info-left,
    .info-center,
    .info-right {
      display: flex;
      flex-direction: column;
      gap: 4px;
    }

    .order-checkbox {
      text-align: right;
      margin-top: 10px;
      margin-bottom: 10px;
    }

    .header {
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 10px;
    }

    .header p {
      margin: 0;
      text-align: center;
      font-size: 1.4em;
    }
  </style>
  <script>
    function translateMeasurement(measurement) {
      return ({
        unit: 'unidad',
        kilogram: 'kilogramo',
      })[measurement] || measurement;
    }
  </script>
</head>

<body>
  <div class="container">
    <div class="half-page">
      <div class="header">
        <p>Orden de Carga</p>
      </div>
      <div class="info">
        <div class="info-left">
          <div>Preparó: _________________</div>
        </div>
        <div class="info-center">
          <div>Pedido N.º: {{documentNumber}}</div>
          <div>Cliente N.º: {{clientNumber}}</div>
        </div>
        <div class="info-right">
          <div>Fecha: {{date}}</div>
          <div>Entrega: _________________</div>
        </div>
      </div>
      <table>
        <thead>
          <tr>
            <th>Código</th>
            <th>Descripción</th>
            <th>Presentación</th>
            <th>Cantidad</th>
          </tr>
        </thead>
        <tbody>
          {{#each products}}
          <tr>
            <td>{{code}}</td>
            <td>{{name}}</td>
            <td>{{measurement}}</td>
            <td>{{quantity}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      <div class="order-checkbox">Pedido completo <b>☐</b></div>
    </div>
    <div class="half-page">
      <div class="header">
        <p>Orden de Carga</p>
      </div>
      <div class="info">
        <div class="info-left">
          <div>Preparó: _________________</div>
        </div>
        <div class="info-center">
          <div>Pedido N.º: {{documentNumber}}</div>
          <div>Cliente N.º: {{clientNumber}}</div>
        </div>
        <div class="info-right">
          <div>Fecha: {{date}}</div>
          <div>Entrega: _________________</div>
        </div>
      </div>
      <table>
        <thead>
          <tr>
            <th>Código</th>
            <th>Descripción</th>
            <th>Presentación</th>
            <th>Cantidad</th>
          </tr>
        </thead>
        <tbody>
          {{#each products}}
          <tr>
            <td>{{code}}</td>
            <td>{{name}}</td>
            <td>{{measurement}}</td>
            <td>{{quantity}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      <div class="order-checkbox">Pedido completo <b>☐</b></div>
    </div>
  </div>
</body>

</html>
